{
  "name": "web-portfolio",
  "version": "1.0.0",
  "description": "A personal web portfolio.",
  "main": "src/index.js",
  "scripts": {
    "start": "npm-run-all --parallel watch:css serve",
    "serve": "live-server src/ --mount=/assets:assets",
    "watch:css": "cross-env NODE_ENV=development tailwindcss --postcss -i ./src/css/tailwind.css -o ./src/css/tailwind-build.css -w",
    "build": "cross-env NODE_ENV=production tailwindcss --postcss -i ./src/css/tailwind.css -o ./src/css/tailwind-build.css --minify"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "caniuse-lite": "^1.0.30001754",
    "postcss": "^8.4.33",
    "postcss-simple-vars": "^7.0.1"
  }
}
